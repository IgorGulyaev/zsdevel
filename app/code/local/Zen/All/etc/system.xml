<?xml version="1.0"?>
<config>
    <tabs>
        <zen_all translate="label" module="zen_all">
            <label>Zen</label>
            <sort_order>200</sort_order>
        </zen_all>
    </tabs>
    <sections>
        <zen_all_options translate="label" module="zen_all">
            <label>Theme settings</label>
            <tab>zen_all</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <topmenu translate="label">
                    <label>Navigation settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <topmenu_type_option>
                            <label>Menu type</label>
                            <comment>Choose menu type</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>zen_all/words</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </topmenu_type_option>
                        <topmenu_position>
                            <label>Menu position</label>
                            <comment>Choose menu position</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>zen_all/position</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>2</show_in_store>
                        </topmenu_position>
                        <topmenu_offset_top>
                            <label>Menu Fixed Offset Top</label>
                            <comment>Set menu offset top (default 350)</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </topmenu_offset_top>
                    </fields>
                </topmenu>
            </groups>
        </zen_all_options>
        <zen_all_synchronize_ln translate="label" module="zen_all">
            <label>Synchronize layered navigation with categories</label>
            <tab>zen_all</tab>
            <frontend_type>text</frontend_type>
            <sort_order>7</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <messages translate="label">
                    <label>Synchronize</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <synchronize translate="label">
                            <label>Synchronize</label>
                            <frontend_type>button</frontend_type>
                            <frontend_model>zen_all/adminhtml_synchronize</frontend_model>
                            <comment>Synchronize layered navigation with categories</comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </synchronize>
                    </fields>
                </messages>
            </groups>
        </zen_all_synchronize_ln>
    </sections>
</config>