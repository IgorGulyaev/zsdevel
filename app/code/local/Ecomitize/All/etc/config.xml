<config>
    <modules>
        <Ecomitize_All>
            <version>1.5.3</version>
        </Ecomitize_All>
    </modules>
    <adminhtml>
        <layout>
            <updates>
                <ecomitize_all_color>
                    <file>ecomitize_all.xml</file>
                </ecomitize_all_color>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <ecomitize_all>
                <class>Ecomitize_All_Model</class>
            </ecomitize_all>
            <ajaxcartpro>
                <rewrite>
                    <renderer>Ecomitize_All_Model_Ajaxcartpro_Renderer</renderer>
                </rewrite>
            </ajaxcartpro>
        </models>
        <resources>
            <ecomitize_all_setup>
                <setup>
                    <module>Ecomitize_All</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
            </ecomitize_all_setup>
        </resources>
        <blocks>
            <ecomitize_all>
                <class>Ecomitize_All_Block</class>
            </ecomitize_all>
            <core>
                <rewrite>
                    <html_select>Ecomitize_All_Block_Html_Select</html_select>
                    <messages>Ecomitize_All_Block_Core_Messages</messages>
                </rewrite>
            </core>
            <banner>
                <rewrite>
                    <adminhtml_banner_edit_tab_form>Ecomitize_All_Block_Banner_Adminhtml_Banner_Edit_Tab_Form</adminhtml_banner_edit_tab_form>
                    <adminhtml_bannergroup_edit_tab_form>Ecomitize_All_Block_Banner_Adminhtml_Bannergroup_Edit_Tab_Form</adminhtml_bannergroup_edit_tab_form>
                </rewrite>
            </banner>
            <adminhtml>
                <rewrite>
                    <widget_grid_column_renderer_massaction>Ecomitize_All_Block_Adminhtml_Widget_Grid_Column_Renderer_Massaction</widget_grid_column_renderer_massaction>
                    <newsletter_problem_grid_filter_checkbox>Ecomitize_All_Block_Adminhtml_Newsletter_Problem_Grid_Filter_Checkbox</newsletter_problem_grid_filter_checkbox>
                    <widget_grid_column_renderer_checkbox>Ecomitize_All_Block_Adminhtml_Widget_Grid_Column_Renderer_Checkbox</widget_grid_column_renderer_checkbox>
                    <newsletter_subscriber_grid_filter_checkbox>Ecomitize_All_Block_Adminhtml_Newsletter_Subscriber_Grid_Filter_Checkbox</newsletter_subscriber_grid_filter_checkbox>
                    <widget_grid_column_filter_date>Ecomitize_All_Block_Adminhtml_Widget_Grid_Column_Filter_Date</widget_grid_column_filter_date>
                    <widget_grid_column_filter_datetime>Ecomitize_All_Block_Adminhtml_Widget_Grid_Column_Filter_Datetime</widget_grid_column_filter_datetime>
                    <page_menu>Ecomitize_All_Block_Adminhtml_Page_Menu</page_menu>
                </rewrite>
            </adminhtml>
            <amorderattr>
                <rewrite>
                    <fields>Ecomitize_All_Block_Orderattr_Fields</fields>
                </rewrite>
            </amorderattr>
        </blocks>
        <helpers>
            <ecomitize_all>
                <class>Ecomitize_All_Helper</class>
            </ecomitize_all>
        </helpers>
        <resources>
            <ecomitize_all_setup>
                <setup>
                    <module>Ecomitize_All</module>
                </setup>
            </ecomitize_all_setup>
        </resources>
        <template>
            <email>
                <sales_email_shipment_template translate="label" module="sales">
                    <file>sales/shipment_new_custom.html</file>
                </sales_email_shipment_template>
                <sales_email_shipment_guest_template translate="label" module="sales">
                    <file>sales/shipment_new_guest_custom.html</file>
                </sales_email_shipment_guest_template>
            </email>
        </template>
        <events>
            <catalog_product_prepare_save>
                <observers>
                    <super_product_attributes_prepare_save>
                        <type>disabled</type>
                    </super_product_attributes_prepare_save>
                    <super_product_attributes_prepare_save_override>
                        <class>ecomitize_all/observer</class>
                        <method>onSuperProductAttributesPrepareSave</method>
                    </super_product_attributes_prepare_save_override>
                </observers>
            </catalog_product_prepare_save>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <eco_all>
                    <file>eco_all.xml</file>
                </eco_all>
            </updates>
        </layout>
        <routers>
            <deal>
                <use>standard</use>
                <args>
                    <module>Ecomitize_All</module>
                    <frontName>recomendation</frontName>
                </args>
            </deal>
            <ecomitize_all>
                <use>standard</use>
                <args>
                    <module>Ecomitize_All</module>
                    <frontName>all</frontName>
                </args>
            </ecomitize_all>
        </routers>
        <checkout>
            <args>
                <modules>
                    <ecomitize_all before="Mage_Checkout">Ecomitize_All</ecomitize_all>
                </modules>
            </args>
        </checkout>
        <events>
            <controller_action_layout_render_before>
                <observers>
                    <ecomtize_all_render_before>
                        <class>ecomitize_all/observer</class>
                        <method>renderBefore</method>
                    </ecomtize_all_render_before>
                </observers>
            </controller_action_layout_render_before>
        </events>
    </frontend>
    <admin>
        <routers>
            <banner>
                <args>
                    <modules>
                        <ecomitize_all before="Uni_Banner">Ecomitize_All_Adminhtml</ecomitize_all>
                    </modules>
                </args>
            </banner>
            <adminhtml>
                <args>
                    <modules>
                        <ecomitize_all after="Mage_Adminhtml">Ecomitize_All</ecomitize_all>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <stores>
        <admin>
            <design>
                <package>
                    <name>default</name>
                </package>
                <theme>
                    <template>eco</template>
                    <skin>eco</skin>
                    <layout>eco</layout>
                </theme>
            </design>
        </admin>
    </stores>
    <crontab>
        <jobs>
            <ecomitize_synchronize>
                <schedule>
                    <cron_expr>0 0 * * *</cron_expr>
                </schedule>
                <run>
                    <model>ecomitize_all/observer::synchronize</model>
                </run>
            </ecomitize_synchronize>
        </jobs>
    </crontab>
</config>