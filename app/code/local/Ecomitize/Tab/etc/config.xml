<?xml version="1.0"?>
<config>
    <modules>
        <Ecomitize_Tab>
            <version>0.1.0</version>
        </Ecomitize_Tab>
    </modules>
    <global>
        <blocks>
            <ecomitize_tab>
                <class>Ecomitize_Tab_Block</class>
            </ecomitize_tab>
        </blocks>
        <helpers>
            <ecomitize_tab>
                <class>Ecomitize_Tab_Helper</class>
            </ecomitize_tab>
        </helpers>
        <models>
            <ecomitize_tab>
                <class>Ecomitize_Tab_Model</class>
            </ecomitize_tab>
            <widget>
                <rewrite>
                    <widget_instance>Ecomitize_Tab_Model_Widget_Widget_Instance</widget_instance>
                </rewrite>
            </widget>
        </models>
        <events>
            <widget_widget_instance_save_before>
                <observers>
                    <ecomitize_tab>
                        <class>ecomitize_tab/observer</class>
                        <method>saveBefore</method>
                    </ecomitize_tab>
                </observers>
            </widget_widget_instance_save_before>
        </events>
    </global>
</config>