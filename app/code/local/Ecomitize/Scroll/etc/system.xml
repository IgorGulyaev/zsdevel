<?xml version="1.0"?>
<config>
    <sections>
        <ecomitize_all_scroll_options translate="label" module="ecomitize_all">
            <label>Scroll settings</label>
            <tab>ecomitize_all</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <messages translate="label">
                    <label>Scroll settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <scroll_option_enabled>
                            <label>Scroll</label>
                            <comment>Enable/disable scroll</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>ecomitize_all/options</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </scroll_option_enabled>
                        <scroll_option>
                            <label>Infinity or Button</label>
                            <comment>infinity scroll/button with load more</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>ecomitize_all/optionsButton</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>2</show_in_default>
                            <show_in_website>2</show_in_website>
                            <show_in_store>2</show_in_store>
                        </scroll_option>
                        <pagination_option>
                            <label>Pagination</label>
                            <comment>Enable/disable pagination</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>ecomitize_all/options</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>3</show_in_default>
                            <show_in_website>3</show_in_website>
                            <show_in_store>3</show_in_store>
                        </pagination_option>
                    </fields>
                </messages>
            </groups>
        </ecomitize_all_scroll_options>
    </sections>
</config>