<?php echo $this->getMessagesBlock()->toHtml() ?>
<h1><?php echo $this->__('My Product Reviews') ?></h1>
<?php if( $this->getCollection() && $this->count()): ?>
    <?php echo $this->getToolbarHtml() ?>
        <div id="my-reviews-table">
            <?php foreach ($this->getCollection() as $_review): ?>
                <div class="media">
                    <div class="media-body">
                        <a class="media-view-details pull-right" href="<?php echo $this->getReviewLink() ?>id/<?php echo $_review->getReviewId() ?>"><?php echo $this->__('View Details') ?></a>
                        <h4 class="media-heading">
                            <a href="<?php echo $this->getProductLink() ?>id/<?php echo $_review->getEntityPkValue() ?>"><?php echo $this->escapeHtml($_review->getName()) ?></a>
                            <small><?php echo $this->__('You says:') ?></small>
                        </h4>
                        <div class="small">Posted on <?php echo $this->dateFormat($_review->getReviewCreatedAt()); ?></div>
                        <?php echo $_review->getDetail() ?>
                    </div>
                </div>
            <?php endforeach; ?>
        </div>
<?php else: ?>
    <p><?php echo $this->__('You have submitted no reviews.') ?></p>
<?php endif; ?>
<p class="back-link"><a href="<?php echo $this->escapeUrl($this->getBackUrl()) ?>"><?php echo $this->__('Back') ?></a></p>