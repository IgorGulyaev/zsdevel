<?php if( $this->getCollection() && $this->count()): ?>
<div class="block block-recent">
    <div class="block-title">
        <a class="pull-right" href="<?php echo $this->getAllReviewsUrl() ?>"><?php echo $this->__('View All Reviews') ?></a>
        <?php echo $this->__('My Recent Reviews') ?>
    </div>
    <div class="block-content">
        <ul class="nav nav-panel">
            <?php foreach ($this->getCollection() as $_review): ?>
                <li>
                    <a href="<?php echo $this->getReviewUrl($_review->getReviewId()) ?>"><?php echo $this->escapeHtml($_review->getName()) ?></a>
                </li>
            <?php endforeach; ?>
        </ul>
    </div>
</div>
<?php endif; ?>
