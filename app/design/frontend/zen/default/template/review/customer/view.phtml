<?php if($this->getProductData()->getId()): ?>
<div class="product-review">
    <h1><?php echo $this->__('Review Details') ?></h1>
    <?php if( $this->getRating() && $this->getRating()->getSize()): ?>
    <p><?php echo $this->__('Average Customer Rating:') ?> <?php echo $this->getReviewsSummaryHtml($this->getProductData()) ?></p>
    <?php endif; ?>
    <div class="media">
        <div class="media-left">
            <a href="<?php echo $this->getProductData()->getProductUrl() ?>" title="<?php echo $this->escapeHtml($this->getProductData()->getName()) ?>">
                <img class="media-object"  src="<?php echo $this->helper('catalog/image')->init($this->getProductData(), 'small_image')->resize(125, 125); ?>" width="125" height="125" alt="<?php echo $this->escapeHtml($this->getProductData()->getName()) ?>">
            </a>
        </div>
        <div class="media-body">
            <h4 class="media-heading">
                <?php echo $this->escapeHtml($this->getProductData()->getName()) ?>
                <small>
                    <?php if ($this->isReviewOwner()): ?>
                        <?php echo $this->__('Your Review (submitted on %s):', $this->dateFormat($this->getReviewData()->getCreatedAt())) ?>
                    <?php else :?>
                        <?php echo $this->__('Review (submitted on %s):', $this->dateFormat($this->getReviewData()->getCreatedAt())) ?>
                    <?php endif;?>
                </small>
            </h4>
            <?php echo nl2br($this->escapeHtml($this->getReviewData()->getDetail())) ?>
        </div>
    </div>
    <p class="back-link"><a href="<?php echo $this->getBackUrl() ?>"><?php echo $this->__('Back to My Reviews') ?></a></p>
</div>
<?php endif; ?>
