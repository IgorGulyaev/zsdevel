<?php $_product = $this->getProduct(); ?>
<?php $_helper = $this->helper('catalog/output'); ?>
<?php $productName = $_helper->productAttribute($_product, $_product->getName(), 'name'); ?>
<?php $productUrl = $_product->getProductUrl(); ?>
<?php $productImage = $this->helper('catalog/image')->init($_product, 'image'); ?>
<ul class="social-likes">
    <li class="plusone"><a href="javascript:popWin('https://plus.google.com/share?url=<?php echo urlencode($productUrl); ?>', 'google', 'width=640,height=480,left=0,top=0,location=no,status=yes,scrollbars=yes,resizable=yes');" title="<?php echo $this->__('Share on Google Plus') ?>"><i class="icon-google-plus"></i><span><?php echo $this->__('Google Plus') ?></span></a></li>
    <li class="facebook"><a href="javascript:popWin('https://www.facebook.com/sharer/sharer.php?u=<?php echo urlencode($productUrl); ?>&t=<?php echo urlencode($productName); ?>', 'facebook', 'width=640,height=480,left=0,top=0,location=no,status=yes,scrollbars=yes,resizable=yes');" title="<?php echo $this->__('Share on Facebook') ?>"><i class="icon-facebook"></i><span><?php echo $this->__('Facebook') ?></span></a></li>
    <li class="twitter"><a href="javascript:popWin('http://twitter.com/home/?status=<?php echo urlencode($productName . ' (' . $productUrl . ')'); ?>', 'twitter', 'width=640,height=480,left=0,top=0,location=no,status=yes,scrollbars=yes,resizable=yes');" title="<?php echo $this->__('Tweet') ?>"><i class="icon-twitter"></i><span><?php echo $this->__('Twitter') ?></span></a></li>
    <li class="pinterest"><a href="javascript:popWin('https://pinterest.com/pin/create/button/?url=<?php echo urlencode($productUrl); ?>&media=<?php echo urlencode($productImage); ?>&description=<?php echo urlencode($productName); ?>', 'pinterest', 'width=640,height=480,left=0,top=0,location=no,status=yes,scrollbars=yes,resizable=yes');" title="<?php echo $this->__('Pin it') ?>"><i class="icon-pinterest"></i><span><?php echo $this->__('Pinterest') ?></span></a></li>
    <?php if ($this->canEmailToFriend()): ?>
        <li class="email-friend"><a href="<?php echo $this->helper('catalog/product')->getEmailToFriendUrl($_product) ?>" class="link-email-friend" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Email to a Friend')) ?>"><i class="icon-email"></i><span><?php echo $this->__('Email to a Friend') ?></span></a></li>
    <?php endif; ?>
</ul>