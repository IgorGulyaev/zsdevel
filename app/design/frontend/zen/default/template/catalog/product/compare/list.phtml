?>
<h1><a href="#" onclick="window.print(); return false;" class="button-print"><i class="icon-print"></i><?php echo $this->__('Print This Page') ?></a><?php echo $this->__('Compare Products') ?></h1>
<?php $_total=$this->getItems()->getSize() ?>
<?php if($_total): ?>
    <div class="table-responsive compare-table-wrap">
        <table class="table table-bordered compare-table" id="product_comparison">
            <?php $_i=0 ?>
            <?php foreach($this->getItems() as $_item): ?>
                <?php if($_i++%10==0): ?>
                    <col width="1">
                <?php endif; ?>
                    <col width="<?php echo floor(100/$_total); ?>%">
                <?php endforeach; ?>
                <tbody>
                    <tr class="product-shop-row">
                        <?php $_i=0; ?>
                        <?php $productRenderer = $this->getChild('product_renderer'); ?>
                        <?php foreach($this->getItems() as $_item): ?>
                            <?php if($_i++%10==0): ?>
                                <th></th>
                            <?php endif; ?>
                            <td>
                                <div class="compare-product-item">
                                    <a href="<?php echo $this->helper('catalog/product_compare')->getRemoveUrl($_item) ?>" data-confirm="<?php echo $this->__('Remove This Item?') ?>" class="close btn-remove" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Remove This Item')) ?>"><i class="icon-close"></i></a>
                                    <?php $productRenderer->setProduct($_item); ?>
                                    <?php echo $productRenderer->toHtml(); ?>
                                </div>
                            </td>
                        <?php endforeach; ?>
                    </tr>
                    <tr class="compare-table-btn">
                        <?php $_i=0; ?>
                        <?php foreach($this->getItems() as $_item): ?>
                            <?php if($_i++%10==0): ?>
                                <th></th>
                            <?php endif; ?>
                            <td>
                                <?php if($_item->isSaleable()): ?>
                                    <?php if($_item->isConfigurable()): ?>
                                        <button type="button" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Add to Cart')) ?>" class="button btn-block btn-cart" onclick="redirectConfigurable('<?php echo $_item->getUrl() ?>', true)"><span><span><?php echo $this->__('Add to Cart') ?></span></span></button>
                                    <?php else: ?>
                                        <button type="button" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Add to Cart')) ?>" class="button btn-block btn-cart" onclick="setPLocation('<?php echo $this->helper('catalog/product_compare')->getAddToCartUrl($_item) ?>', true)"><span><span><?php echo $this->__('Add to Cart') ?></span></span></button>
                                    <?php endif; ?>
                                <?php else: ?>
                                    <p class="availability out-of-stock"><span><?php echo $this->__('Out of stock') ?></span></p>
                                <?php endif; ?>
                            </td>
                        <?php endforeach; ?>
                    </tr>
                </tbody>
                <tbody>
                <?php foreach ($this->getAttributes() as $_attribute): ?>
                    <tr>
                        <?php $_i=0 ?>
                        <?php foreach($this->getItems() as $_item): ?>
                        <?php if($_i++%10==0): ?>
                            <th><span class="text-nowrap"><?php echo $_attribute->getStoreLabel() ?></span></th>
                        <?php endif; ?>
                            <td>
                                <?php switch ($_attribute->getAttributeCode()) {
                                    case "price": ?>
                                        <?php echo $this->getPriceHtml($_item, true, '-compare-list-' . $_attribute->getCode()) ?>
                                        <?php break;
                                    case "small_image": ?>
                                        <img class="img-responsive" src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(125, 125); ?>" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>">
                                        <?php break;
                                    case "date":
                                          echo substr($this->getProductAttributeValue($_item, $_attribute),0,10);
                                          break;
                                    default: ?>
                                        <div class="std">
                                            <?php echo $this->helper('catalog/output')->productAttribute($_item, $this->getProductAttributeValue($_item, $_attribute), $_attribute->getAttributeCode()) ?>
                                        </div>
                                        <?php break;
                                } ?>
                            </td>
                        <?php endforeach; ?>
                    </tr>
                <?php endforeach; ?>
                </tbody>
                <tbody>
                        <tr class="add-to-row">
                        <?php $_i=0 ?>
                        <?php foreach($this->getItems() as $_item): ?>
                        <?php if($_i++%10==0): ?>
                            <th></th>
                        <?php endif; ?>
                            <td>
                                <?php echo $this->getPriceHtml($_item, true, '-compare-list-bottom') ?>
                            </td>
                        <?php endforeach; ?>
                    </tr>
                </tbody>
            </table>
    </div>
    <script type="text/javascript">
        decorateTable('product_comparison');
        /**
         * Send remove item request, after that reload windows
         */
        function removeItem(url)
        {
            new Ajax.Request(url, {
                parameters: {isAjax: 1, method: 'POST'},
                onLoading: function(){$('compare-list-please-wait').show();},
                onSuccess: function(transport) {
                    $('compare-list-please-wait').hide();
                    window.location.reload();
                    window.opener.location.reload();
                }
            });
        }
        function redirectConfigurable(url){
            var ajaxUrl = '<?php echo Mage::getBaseUrl()  ?>ajaxcart/checkout_cart/compare/';
            document.getElementById('loading').style.display = 'block';
            new Ajax.Request(ajaxUrl,{
                method: 'get',
                onSuccess: function(transport){
                    document.getElementById('loading').style.display = 'none';
                    window.location = url;
                }
            });
        }
    </script>
<?php else: ?>
    <p class="text-center"><?php echo $this->__('Compare Products are Empty!') ?></p>
<?php endif; ?>
<script>
    jQuery(document).ready(function ($) {
        var compare_wrap = '.compare-table-wrap';
        var down;
        $(compare_wrap).mousedown(function(e) {
            e.preventDefault();
            down = true;
            x = e.pageX;
            y = e.pageY;
            top = $(this).scrollTop();
            left = $(this).scrollLeft();
        });
        $(document).mousemove(function(e) {
            if(down){
                var newX=e.pageX;
                var newY=e.pageY;
                $(compare_wrap).scrollTop(top-newY+y);
                $(compare_wrap).scrollLeft(left-newX+x);
            }
        });
        $(document).mouseup(function(e){
            down = false;
        });
    });
</script>
