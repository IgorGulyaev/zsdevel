<?php
/**
 * Category layered navigation state
 *
 * @see Mage_Catalog_Block_Layer_State
 */
?>
<?php $_filters = $this->getActiveFilters() ?>
<?php
    $_helper = $this->helper('catalog/output');
    $_current_category = Mage::registry('current_category');
    $current_url = Mage::helper('core/url')->getCurrentUrl();
    $return_url = '';
    if(!$_current_category){
        $return = explode('?',$current_url);
        $return_url = $return[0];
    }
    else{
        $return_url = $_current_category->getUrl();
    }
?>
<?php if(!empty($_filters)): ?>
<div class="currently">
    <ol>
    <?php foreach ($_filters as $_filter): ?>
        <li>
            <a class="button-remove" href="<?php echo $_filter->getRemoveUrl() ?>" title="<?php echo $this->__('Remove This Item') ?>"><span><?php echo $this->__($_filter->getName()) ?>: <?php echo $this->stripTags($_filter->getLabel()) ?></span></a>
        </li>
    <?php endforeach; ?>
        <li>
            <a class="button-clear-filters" href="<?php echo $return_url ?>"><span><?php echo $this->__('Clear filters') ?></span></a>
        </li>
    </ol>
</div>
<?php endif; ?>
