<?php
$_filters = $this->getActiveFilters();
?>
<?php if(!empty($_filters)): ?>
<div class="currently">
    <ol>
    <?php foreach ($_filters as $key => $value): ?>
        <li>
            <a class="button-remove" href="<?php echo $this->getFilteredUrl($key) ?>" title="<?php echo $this->__('Remove This Item') ?>"><span><?php echo $this->__($key) ?>: <?php echo $this->stripTags($this->getOptionData($value)->getTitle()) ?></span></a>
        </li>
    <?php endforeach; ?>
        <li>
            <a class="button-clear-filters" href="<?php echo $this->getClearUrl() ?>"><span><?php echo $this->__('Clear filters') ?></span></a>
        </li>
    </ol>
</div>
<?php endif; ?>
