?><?php /** @var AW_Layerednavigation_Block_Filter_Option_Title $this */?>
<?php /** @var AW_Layerednavigation_Model_Filter_Option $option */?>
<?php
    $style = 'width:20px; text-align:center; display:inline-block;';
?>

<?php $option = $this->getOption()?>

<?php if ($this->getImagePosition() == AW_Layerednavigation_Model_Source_Filter_Image_Position::TEXT_ONLY_CODE):?>
    <a title="<?php echo $option->getDescription();?>"><?php echo $option->getTitle();?></a>
<?php elseif($this->getImagePosition() == AW_Layerednavigation_Model_Source_Filter_Image_Position::IMAGE_ONLY_CODE):?>
    <?php  if($option->getImage()): ?>
        <img src="<?php echo $this->getOptionImageUrl($option, 20, 20);?>" alt="<?php echo $option->getTitle();?>" width="20" height="20" title="<?php echo $option->getDescription();?>"/>
    <?php else: ?>
        <span  style="background-color:#<?php echo $option->getColorpicker().';'; if($option->getColorpicker() != 'FFFFFF'): echo $style; endif; ?>">&nbsp;</span>
    <?php endif;?>
<?php elseif($this->getImagePosition() == AW_Layerednavigation_Model_Source_Filter_Image_Position::LEFT_CODE):?>
    <?php  if($option->getImage()): ?>
        <img src="<?php echo $this->getOptionImageUrl($option, 20, 20);?>" alt="<?php echo $option->getTitle();?>" width="20" height="20" title="<?php echo $option->getDescription();?>"/>
    <?php else: ?>
        <span  style="background-color:#<?php echo $option->getColorpicker().';'; if($option->getColorpicker() != 'FFFFFF'): echo $style; endif; ?>">&nbsp;</span>
    <?php endif;?>
    <a title="<?php echo $option->getDescription();?>"><?php echo $option->getTitle();?></a>
<?php elseif($this->getImagePosition() == AW_Layerednavigation_Model_Source_Filter_Image_Position::RIGHT_CODE):?>
    <a title="<?php echo $option->getDescription();?>"><?php echo $option->getTitle();?></a>
    <?php  if($option->getImage()): ?>
        <img src="<?php echo $this->getOptionImageUrl($option, 20, 20);?>" alt="<?php echo $option->getTitle();?>" width="20" height="20" title="<?php echo $option->getDescription();?>"/>
    <?php else: ?>
        <span  style="background-color:#<?php echo $option->getColorpicker().';'; if($option->getColorpicker() != 'FFFFFF'): echo $style; endif; ?>">&nbsp;</span>
    <?php endif;?>
<?php endif;?>